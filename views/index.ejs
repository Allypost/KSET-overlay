<!DOCTYPE html>
<html>
    <head>
        <% if(locals.styles) { %>
            <% styles.forEach(({ link, tag }) => { -%>
                <link rel="stylesheet" href="<%- `${link}?v=${tag}` -%>">
            <% }) -%>
        <% } %>
    </head>
    <body>
        <form method="POST" id="chat-message-form">
            <input name="text" type="text" id="chat-message-input">
        </form>
        <% if(locals.scripts) { -%>
            <% scripts.forEach(({ link, href, tag }) => { -%>
                <script src="<%- `${link}?v=${tag}` -%>"></script>
            <% }) -%>
        <% } -%>
    </body>
</html>
